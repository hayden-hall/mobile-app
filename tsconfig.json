{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react-native",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "noEmit": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "./node_modules/@types/*",
          "./node_modules/*",
          "./src/types",
        ]
      }
    },
    "exclude": ["node_modules"]
  }